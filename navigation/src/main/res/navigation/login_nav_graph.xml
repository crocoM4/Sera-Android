<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_nav_graph"
    app:startDestination="@id/google_login">

    <activity
        android:id="@+id/login_activity"
        android:name="com.guerra.enrico.login.LoginActivity" />

    <fragment
        android:id="@+id/google_login"
        android:name="com.guerra.enrico.login.LoginFragment"
        >
        <action
            android:id="@+id/action_login_to_sync"
            app:destination="@id/login_sync" />
    </fragment>

    <fragment
        android:id="@+id/login_sync"
        android:name="com.guerra.enrico.login.SyncFragment"
        >
        <action
            android:id="@+id/action_sync_to_login"
            app:destination="@id/google_login" />
    </fragment>

</navigation>