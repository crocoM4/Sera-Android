<resources>
    <style name="Widget.AppBar" parent="@style/Widget.Design.AppBarLayout">
<!--        <item name="popupTheme">@style/AppTheme.PopupTheme</item>-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.Sera.Button" parent="Widget.MaterialComponents.Button">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Sera.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Widget.Sera.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">?attr/inputBackgroundColor</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="android:textColorHint">?attr/hintTextColor</item>
    </style>

    <style name="Widget.Sera.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:colorAccent">?attr/colorPrimary</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/SecondaryTextButton</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/SecondaryTextButton</item>
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
    </style>

    <style name="ToolbarSearch">
        <item name="android:paddingTop">@dimen/toolbar_search_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/toolbar_search_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/toolbar_search_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/toolbar_search_padding_horizontal</item>
    </style>

    <style name="ToolbarTitle">
        <item name="fontFamily">@font/prompt</item>
        <item name="android:textSize">@dimen/toolbar_title_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <!-- Text -->

    <style name="Title">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TitleSecondary">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextInput">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="SearchTextInput" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/prompt</item>
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:paddingTop">@dimen/search_edit_text_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/search_edit_text_padding_vertical</item>
        <item name="android:paddingRight">@dimen/search_edit_text_padding_horizontal</item>
        <item name="android:paddingLeft">@dimen/search_edit_text_padding_horizontal</item>
    </style>

    <style name="ListItemTitle">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/item_list_title_text_size</item>
    </style>

    <style name="ListItemDescription">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/item_list_description_text_size</item>
    </style>

    <style name="TipPrimary">
        <item name="fontFamily">@font/prompt_light</item>
        <item name="android:textSize">@dimen/tip_primary_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Tip">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textSize">@dimen/tip_text_size</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Buttons -->

    <style name="PrimaryTextButton" parent="Widget.Sera.TextButton">
        <item name="android:textSize">@dimen/button_text_primary_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="rippleColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="SecondaryTextButton" parent="Widget.Sera.TextButton">
        <item name="android:textSize">@dimen/button_text_secondary_text_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="rippleColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- Category Chip -->
    <style name="CategoryChipText">
        <item name="fontFamily">@font/prompt_bold</item>
        <item name="android:textSize">@dimen/category_item_text_size</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CategoryChipText.Small" parent="CategoryChipText">em>
        <item name="android:textSize">@dimen/category_item_text_size_small</item>
    </style>

    <!-- Bottom sheet dialog -->

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/filters_sheet_background</item>
        <item name="android:elevation">@dimen/bottom_sheet_elevation</item>
    </style>

    <style name="BottomSheetAnimation.Window" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
<!--        <item name="android:navigationBarColor">@color/navigation_bar_color</item>-->
        <!--        <item name="android:windowDrawsSystemBarBackgrounds">false</item>-->
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation.Window</item>
    </style>

</resources>
