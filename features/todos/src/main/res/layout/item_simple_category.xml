<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="category"
            type="com.guerra.enrico.models.todos.Category" />
    </data>

    <TextView
        android:id="@+id/label_category_name"
        style="@style/CategoryChipText.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_s"
        android:layout_marginEnd="@dimen/padding_s"
        android:background="@drawable/item_category_simple_background"
        android:text="@{category.name}"
        android:textColor="?attr/colorPrimary" />

</layout>
